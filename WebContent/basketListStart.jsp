<!-- 장바구니 -->
<br><br>
<div style="width:80%; margin:0 auto;">
	<h2>장바구니</h2><hr>
	<table class="table" style="text-align:center;">
	  <thead>
	    <tr>
	      <th scope="col">상품번호</th>
	      <th scope="col">상품명</th>
	      <th scope="col">가격</th>
	      <th scope="col">삭제</th>
	    </tr>
	    <c:forEach var="basket" items="${basket }">
		    <tr>
		      <td>${basket.getBasItemNum() }</td>
		      <td>${basket.getBasItemName() }</td>
		      <td><input type="hidden" name="price" id="price" value="${basket.getBasItemPrice() }"><fmt:formatNumber value="${basket.getBasItemPrice() }" pattern="#,###"/>원</td>
		      <td><button type="button" class="btn btn-danger btn-sm" onclick="location.href='basketDelete.jsp?basItemNum=${basket.getBasItemNum() }&userID=${userID }'">삭제</button></td>
		    </tr>
	    </c:forEach>
	  </thead>
	</table>
	<hr>
	<%
		request.getAttribute("total");
	%>
	<h5>총합 : <fmt:formatNumber value="${total }" pattern="#,###"/>원
	<button type="button" class="btn btn-primary" onclick = "location.href='buyQuery.jsp?basUserID=${userID }&total=${total }'" style="float:right">구매하기</button>
	</h5>
</div>

